<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">32dp</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="TransparentTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>